	<string>@D</string>
	<key>name</key>
	<string>Debug - Rspec Single Example</string>
	<key>output</key>
	<string>showAsHTML</string>
	<key>scope</key>
	<string>source.ruby.rspec, source.ruby.rspec.story</string>
	<key>uuid</key>
	<string>18D72F51-706A-4568-A283-BC36AE3DB7F9</string>
</dict>
